        <Rectangle Fill="#FFF4F4F5" Style="{StaticResource rectContainer}" HorizontalAlignment="Left" Height="134" Margin="357,258,0,0" Stroke="Black" VerticalAlignment="Top" Width="241"/>
        <Label Content="High Feed Cutt-Off Holder" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="373,265,0,0" VerticalAlignment="Top" Width="197" FontWeight="Bold"/>
        <Label Content="QRN:" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="357,320,0,0" VerticalAlignment="Top" Width="59" FontWeight="Bold"/>
        <TextBox Name="textBoxCuttOffHolder" HorizontalAlignment="Left"  Style="{StaticResource addHolderTextBox}" Height="23" Margin="421,323,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="100"/>
        <Button Content="ADD" x:Name="buttonAddCuttOffHolder" Style="{StaticResource addHolderButtonStyle}" HorizontalAlignment="Left" Margin="538,323,0,0" VerticalAlignment="Top" Width="48" Height="23"/>
    </Grid>
</Window>
