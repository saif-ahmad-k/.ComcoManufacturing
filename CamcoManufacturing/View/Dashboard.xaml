<Window x:Class="CamcoManufacturing.View.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CamcoManufacturing.View"
        mc:Ignorable="d"
        Title="Dashboard" Height="450" Width="800" Background="Gray"  WindowState="Maximized">

    <Grid>
        <Image Source="/CamcoManufacturing;component/Images/CamcoBannerBackround.jpg" Height="121" VerticalAlignment="Top" Margin="0,5,-2,0"/>
        <Image HorizontalAlignment="Left" Source="/CamcoManufacturing;component/Images/Camco_Manufacturing_Unofficial_Logo_Large.png" Height="52" VerticalAlignment="Top" Width="224" Margin="0,5,0,0"/>
        <Button Click="Button_Click_1"  Content="Add/View Product" Style="{StaticResource normalButton}" HorizontalAlignment="Left" Margin="33,131,0,0" VerticalAlignment="Top" Width="169" Height="44"/>
        <Button Click="Button_Click" Content="Sheets/Reports" Style="{StaticResource normalButton}" HorizontalAlignment="Left" Margin="207,131,0,0" VerticalAlignment="Top" Width="169" Height="44"/>

    </Grid>
</Window>
