    <Grid>
        <Image HorizontalAlignment="Left" Source="/CamcoManufacturing;component/Images/CamcoBannerBackround.jpg" Height="534" VerticalAlignment="Top" Width="1418" Margin="0,5,-626,-120"/>

        <Button x:Name="buttonBump" Style="{StaticResource smallTurretButtonStyle}" Content="BUMP" HorizontalAlignment="Left" Margin="80,104,0,0" VerticalAlignment="Top" Width="132" Height="26" Click="ButtonBump_Click"/>
